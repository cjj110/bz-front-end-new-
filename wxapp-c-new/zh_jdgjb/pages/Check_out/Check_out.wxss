.order_info {
  /* width: 95%; */
  height: 100%;
  /* margin: 0 auto 0; */
  padding: 0 16rpx;
  padding-top: 32rpx;
  padding-bottom: 35rpx;
  background: #fff;
  margin: 26rpx 46rpx;
  border-radius: 8rpx;
}

.order_info>view {
  display: inline-block;
  vertical-align: middle;
  overflow: hidden;
}

.order_info>view:nth-child(1) {
  width: 192rpx;
  height: 190rpx;
  margin-right: 26rpx;
}

.order_info>view:nth-child(2) {
  width: 65%;
  height: 200rpx;
}

.order_info>view:nth-child(3) {
  width: 100%;
  height: 100rpx;
  border-top: 2rpx solid #f9f9f9;
}

.check {
  font-size: 24rpx;
  color: #919191;
}

.btm {
  width: 300rpx;
  background: #febfb9;
  border-radius: 90rpx;
  line-height: 73rpx;
  color: #fff;
  font-size: 28rpx;
  margin: 0 auto;
  text-align: center;
}

.ddd {
  position: absolute;
  width: 100%;
  bottom: 200rpx;
}
