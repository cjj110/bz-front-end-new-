.hotel {
  width: 670rpx;
  margin: 0 auto;
  background: #fff;
  padding: 36rpx;
}

.hotel1 {
  text-align: right;
}

.hotel2 {
  margin-bottom: 40rpx;
}

.hotel_title {
  color: #919191;
  font-size: 28rpx;
}

.hotel_line {
  border-bottom: 1rpx solid #febfb9;
  font-size: 32rpx;
  padding: 14rpx 0;
  color: #3f3f47;
}

.hotel_line .iconfont {
  color: #ec6464;
  padding-right: 13rpx;
}

.hotel_line_rg {
  font-size: 24rpx;
  color: #919191;
}

.hotel_equipment {
  display: inline-block;
  width: 20%;
  font-size: 22rpx;
  text-align: center;
  margin-bottom: 25rpx;
}

.hotel_equipment image {
  width: 76rpx;
  height: 76rpx;
}

.hotel_room {
  width: 200rpx;
  height: 200rpx;
  margin-right: 22rpx;
}
